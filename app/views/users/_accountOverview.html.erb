     <div class="row">
          <div>
               <h3>Personal Information</h3>
               <% if current_user.admin? && !current_user?(@user) %>
                    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#info">details</button>
               <% end %>
          </div>
          <hr/>
          <div id="info" class= "<%= current_user.admin? === true ? 'collapse':''%>">
               <div class="col-sm-3"><h4>Name: </h4></div>
               <div class="col-sm-9"><h4><%= @user.family_name %>, <%= @user.name %> <%= @user.middle_name %></h4></div>
               <div class="col-sm-3"><h4>Student Number: </h4></div>
               <div class="col-sm-9"><h4><%= @user.student_number %></h4></div>
               <div class="col-sm-3"><h4>Course & Year: </h4></div>
               <div class="col-sm-9"><h4><%= @user.course_and_year %></h4></div>
               <div class="col-sm-3"><h4>Contact Number: </h4></div>
               <div class="col-sm-9"><h4><%= @user.contact_number %></h4></div>
               <div class="col-sm-3"><h4>Email Address: </h4></div>
               <div class="col-sm-9"><h4><%= @user.email %></h4></div>
          </div>
     </div>
     <div class="row">
          <div>
               <h3>Additional Information</h3>
               <% if current_user.admin? && !current_user?(@user) %>
                    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#info2">details</button>
               <% end %>
          </div>
          <hr/>

               <div class="col-sm-3"><h4>Birthday: </h4></div>
               <div class="col-sm-4"><h4><%= @user.birthday %></h4></div>
               <div class="col-sm-2"><h4>Age: </h4></div>
               <div class="col-sm-3"><h4><%= @user.age %></h4></div>
               <div class="col-sm-3"><h4>Home Address: </h4></div>
               <div class="col-sm-9"><h4><%= @user.home_address %></h4></div>
          </div>
     </div>

<div class="col-md-3">
      <%= render 'user_sidebar' %>
</div>

<div class="col-md-9">
     <h1>
          Accountabilties
     </h1>
     <p id="notice"><%= notice %></p>

    <% if @accountabilities.empty? || @accountabilities.where(classification:['Payment']).count == 0%>
      <pre style="font-size:18px; text-align:justify">
        No existing accountabilities
      </pre>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Classification</th>
            <th>Description</th>
            <th>Due date</th>
            <th>Payment</th>
          </tr>
        </thead>
      
        <tbody>
          <% @accountabilities.each do |accountability| %>
            <% if accountability.classification == "Payment" then %>
              <tr>
                <td><%= accountability.classification %></td>
                <td><%= accountability.description %></td>
                <td><%= accountability.due_date%></td>
                <td><%= accountability.payment %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% end %>
</div>
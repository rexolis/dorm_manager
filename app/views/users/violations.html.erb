<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-3">
	<%= render 'user_sidebar' %>
  </div>
  
  <div class="col-md-9">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Classification</th>
          <th>Description</th>
          <th>Remarks</th>
        </tr>
      </thead>

      <tbody>
        <% @accountabilities.each do |accountability| %>
          <% if accountability.classification == "violations" then %>
            <tr>
              <td><%= accountability.classification %></td>
              <td><%= accountability.description %></td>
              <td>Please see administrator</td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
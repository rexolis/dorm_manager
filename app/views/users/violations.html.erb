<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-3">
	<%= render 'user_sidebar' %>
  </div>
  
  <div class="col-md-9">
    <h1>Violations</h1>
    <% if @accountabilities.empty? %>
      <pre style="font-size:18px; text-align:justify">
        You have not violated anything
      </pre>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Classification</th>
            <th>Description</th>
            <th>Remarks</th>
          </tr>
        </thead>
  
        <tbody>
          <% @accountabilities.each do |accountability| %>
            <% if accountability.classification == "Violation" then %>
              <tr>
                <td><%= accountability.classification %></td>
                <td><%= accountability.description %></td>
                <td>Please see administrator</td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<%= form_for(@permission) do |f| %>
  <% if @permission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@permission.errors.count, "error") %> prohibited this permission from being saved:</h2>

      <ul>
      <% @permission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :applicant %><br>
    <%= f.text_field :applicant, :value => current_user.name, :readonly => true %>
  </div>
  <div class="field">
    <%= f.label :student_number %><br>
    <%= f.text_field :student_number, :value => current_user.student_number, :readonly => true %>
  </div>
  <div class="field">
    <%= f.label :permit_type %><br>
    <%= f.select :permit_type, ['Late check-in', 'Overnight Stay', 'Home']%>
  </div>
  <div class="field">
    <%= f.label :permit_date %></br>
    <%= f.date_select :permit_date, :start_year => Date.today.year, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
 
  <%= f.hidden_field :user_id, :value => @permission.user_id%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

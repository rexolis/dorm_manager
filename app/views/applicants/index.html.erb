<p id="notice"><%= notice %></p>

<h1>Listing Applicants</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>first name</th>
      <th>middle name</th>
      <th>last name</th>
      <th>Student number</th>
      <th>Email</th>
      <th>Course year</th>
      <th>Home address</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.name %></td>
        <td><%= applicant.middle_name %></td>
        <td><%= applicant.family_name %></td>
        <td><%= applicant.student_number %></td>
        <td><%= applicant.email %></td>
        <td><%= applicant.course_year %></td>
        <td><%= applicant.home_address %></td>
        <td><%= applicant.status ? 'approved' : 'not approved' %></td>
        <td><%= link_to 'Show', applicant %></td>
         <td class="<%= applicant.status ? 'btn-sm btn-danger' : 'btn-sm btn-success' %>"><%= link_to (applicant.status ? "disapprove" : "approve"), change_applicant_path(applicant) %></td>
        <td><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

